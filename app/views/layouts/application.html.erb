<!DOCTYPE html>
<html>
  <head>
    <title>Renta Casa</title>
    <%= csrf_meta_tags %>
    <%= cloudinary_js_config %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
  <nav>
  <% unless @current_user.present? %>
    <%= link_to 'Login', login_path %>
    <%= link_to 'Signup', new_user_path %>
  <% else %>
    <p>
      Welcome, <%= link_to @current_user.username, user_path(@current_user) %> | <%= link_to 'Logout', login_path, method: :delete %>
    </p>
    <div class="welcome">
    Welcome to Renta Casa!  
    </div>
  <% end %>
  </nav>

    <%= yield %>
  </body>
</html>
